@model Origins_website_ASP.Utils.Compteur
@{
    ViewBag.Title = "Gestion site";
    ViewBag.Content = "";
    Layout = "~/Views/Shared/_LayoutCommun.cshtml";
}

@section insertions
{
    <link rel="stylesheet" href="~/Content/css/gestion.css" />
}

<div id="corpsdepage">
    <div class="partiecorps">
        <h2> Gestion du site web </h2>
        <div id="question"> Que voulez-vous faire ? </div>
        <ul class="listechoix">
            <li class="choixgestion">@Html.ActionLink("Créer une nouvelle actualité", "Index", "CreationActu")</li>
            <li class="choixgestion">@Html.ActionLink("Gérer les actualités", "Index", "Home")</li>
            <li class="choixgestion">@Html.ActionLink("Gérer les avis", "Index", "Avis")</li>
            <li class="choixgestion">@Html.ActionLink("Voir toutes les demandes de prestations", "ListeDemande", "DemandePresta")</li>
        </ul>

        <div id="nbVisite">
            Il y a eut @Model.getNombreVisiteur() visiteurs.
        </div>

        @using (Html.BeginForm("Deconnexion", "Login", FormMethod.Get))
        {
            <input type="submit" value="Se déconnecter" name="deco" id="deco" />
        }
    </div>
</div>

